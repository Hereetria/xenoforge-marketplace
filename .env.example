# ============================
# DATABASE
# ============================
# Your Neon or PostgreSQL connection string
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# ============================
# AUTHENTICATION
# ============================
# The base URL of your NextAuth app (use production domain when deployed)
NEXTAUTH_URL="http://localhost:3000"

# Secret key used by NextAuth for signing and encryption
NEXTAUTH_SECRET="your_nextauth_secret_here"

# ============================
# STRIPE CONFIGURATION
# ============================
# Secret API key from your Stripe dashboard (test key for dev)
STRIPE_SECRET_KEY="sk_test_your_secret_key"

# Publishable key for client-side Stripe usage
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_publishable_key"

# Stripe webhook signing secret (from developer dashboard â†’ webhooks)
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# ===================================
# UPSTASH REDIS (CACHE / RATE LIMITING)
# ===================================
# REST URL for Upstash Redis (from Upstash dashboard)
UPSTASH_REDIS_REST_URL="https://your-upstash-redis-url.upstash.io"

# REST Token (API key) for accessing your Upstash Redis instance
UPSTASH_REDIS_REST_TOKEN="your_upstash_redis_token_here"

# ============================
# FEATURE FLAGS / UI SETTINGS
# ============================
# Example: enables discount banners or promo sections
NEXT_PUBLIC_DISCOUNT_ENABLED=true
